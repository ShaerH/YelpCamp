<% include ../partials/header %>

<div class="container">
    
    <div class="row" >
        <div style="margin: auto">
            <h1 style="padding-bottom:10%">Add New Comments to <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                
                
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-dark btn-block btn-info">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
        
    </div>

</div>

<% include ../partials/footer %>